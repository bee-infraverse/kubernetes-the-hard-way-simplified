{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track version variables in bootstrap/env.sh",
      "managerFilePatterns": [
        "/^bootstrap/env\\.sh$/"
      ],
      "matchStrings": [
        "^(?<var>[A-Z_]+)_VERSION=\\$\\{[^}]*:-(?<currentValue>v?[0-9]+\\.[0-9]+\\.[0-9]+)\\}(?: \\\\)?\\s*#\\s?renovate: datasource=(?<datasource>[^\\s]+) depName=(?<depName>[^\\s]+)"
      ]
    }
  ]
}