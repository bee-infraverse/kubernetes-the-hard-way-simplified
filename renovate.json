{
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Track version variables in bootstrap/env.sh",
      "managerFilePatterns": [
        "**/env.sh"
      ],
      "matchStrings": [
        "export (?<var>[A-Z_]+)_VERSION=\\$\\{[^}]*:-(?<currentValue>v?[0-9]+\\.[0-9]+\\.[0-9]+)\\}.*?#\\s?renovate: datasource=(?<datasource>[^\\s]+) depName=(?<depName>[^\\s]+)"
      ]
    }
  ]
}